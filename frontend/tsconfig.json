{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": false,

    "types": ["vite/client"],

    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "vite.config.ts"]
}
